---
interface Props {
  name: string;
  url: string;
  image?: string;
  description: string;
  date: Date;
}

const { name, url, image, description, date } = Astro.props;

const formattedDate =
  date instanceof Date
    ? date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    : date;
---

<article class="post-card">
  {image && <img src={image} alt={description} class="post-image" />}
  <div class="post-content">
    <time class="post-date">{formattedDate}</time>
    <a href={url} class="post-title">{name}</a>
    <p class="post-desc">{description}</p>
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: row;
    border: 1px solid #ccc;
    border-radius: 7px;
    overflow: hidden;
    background: #fff;
  }

  .post-image {
    width: 25%;
    height: 100%;
    object-fit: cover;
  }

  .post-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .post-title {
    font-size: 18px;
    font-weight: bold;
    color: #222;
    text-decoration: none;
  }

  .post-title:hover {
    text-decoration: underline;
  }

  .post-desc {
    margin-top: 6px;
    margin-bottom: 0px;
    color: #444;
  }

  .post-date {
    font-size: 14px;
    font-weight: 500;
    color: #555;
    margin-bottom: 6px;
  }

  body.dark .post-card {
    background: #1a1a1a;
    border-color: #333;
  }

  body.dark .post-title {
    color: #eee;
  }

  body.dark .post-desc {
    color: #bbb;
  }

  body.dark .post-date {
    color: #aaa;
  }
</style>
